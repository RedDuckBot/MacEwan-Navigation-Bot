<launch>
        <let name="urdf_path" value="$(find-pkg-share macnav_description)/urdf/macnav.urdf.xacro"/>
        <let name="rviz_config_path" value="$(find-pkg-share macnav_drive)/config/drive_config.rviz"/> 

        <node pkg="robot_state_publisher" exec="robot_state_publisher">
            <param name="robot_description" value="$(command 'xacro $(var urdf_path)')"/>
        </node>

        <node pkg="joint_state_publisher" exec="joint_state_publisher"/>

        <node pkg="manual_control" exec="manual_control_node"/>
    
        <node pkg="manual_control" exec="odom_to_tf_node"/>


        <node pkg="rviz2" exec="rviz2" output="screen"/>



</launch>